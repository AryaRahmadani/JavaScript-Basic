 <h1 id="waktu">Waktu</h1>
        <button onclick="Waktu()">
            Waktu
        </button>
        <button onclick="Halo()">
            Klik Ini
        </button>

        <h1 id="waktu">Belajar Js-Eksternal</h1>
        <button id="jam">waktu</button>
        <button id="hari">klik</button>
<br><br>

           <!-- menampilkan text dengan fungsi onchange dan onmouseover -->
        <div>
            <input type="text" placeholder="ketik nama kamu" id="ketik"> <p>Dengan Onmouseover</p>
        </div>
        
<br><br>
        <div>
            <input type="text" placeholder="siapa oshi kamu????" id="oshi"> <p>Tanpa Onmouseover</p>
        </div>
        
